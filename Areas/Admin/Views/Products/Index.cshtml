@model IEnumerable<Product>

@{
    ViewData["Title"] = "Products";
}
<br/>
<h1>Products</h1>
<br/>
<p>
    <a asp-action="Create" class="btn btn-outline-primary">Create New</a>
</p>
<table class="table">
    <thead>
        <tr class="table-primary">

            <th>
                Name
            </th>
            <th>
                Price
            </th>
            <th>
                Category
            </th>
            <th>
                Image
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr class="table-light">
            <td>
                @item.Name
            </td>
            <td>
                $@item.Price
            </td>
            <td>
                @item.Category.Name
            </td>
            <td>
                <img src="~/wwwroot/media/products/@item.Image" width="100" alt="" />
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a>
                <a class="confirmDeletion" asp-action="Delete" asp-route-id="@item.Id"> | Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>

<div class="d-flex w-100 justify-content-center">
    <Pagination page-count="@ViewBag.TotalPages" page-target="/admin/products" page-number="@ViewBag.PageNumber" page-range="@ViewBag.PageRange"></Pagination>
</div>
